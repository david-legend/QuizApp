<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.quizapp.MainActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#EFF7F7">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/quiz6" />

        <!--RadioButtons questions-->

        <android.support.v7.widget.CardView
            android:id="@+id/card_view1"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/card_marginTop"
            android:layout_marginHorizontal="@dimen/card_marginHorizontal"
            android:layout_marginBottom="@dimen/card_marginBottom"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="@dimen/card_cornerRadius"
            app:cardElevation="@dimen/card_elevation">

            <TextView
                android:id="@+id/question_text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/text_paddingTop"
                android:paddingLeft="@dimen/text_paddingLeft"
                android:textSize="@dimen/text_size"
                android:textColor="@color/question_text_color"
                android:textStyle="bold"
                android:text="@string/question1" />
            <RadioGroup
                android:id="@+id/question_1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/radio_padding"
                android:layout_marginTop="@dimen/radio_marginTop"
                android:orientation="vertical">
                <RadioButton
                    android:id="@+id/question_1a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/question_1a"/>
                <RadioButton
                    android:id="@+id/question_1b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/question_1b"/>
                <RadioButton
                    android:id="@+id/question_1c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/question_1c"/>
                <RadioButton
                    android:id="@+id/question_1d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/question_1d"/>
            </RadioGroup>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_view2"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="@dimen/card_marginHorizontal"
            android:layout_marginBottom="@dimen/card_marginBottom"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="@dimen/card_cornerRadius"
            app:cardElevation="@dimen/card_elevation">

            <TextView
                android:id="@+id/question_text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/text_paddingTop"
                android:paddingLeft="@dimen/text_paddingLeft"
                android:textSize="@dimen/text_size"
                android:textColor="@color/question_text_color"
                android:textStyle="bold"
                android:text="@string/question2" />
            <RadioGroup
                android:id="@+id/question_2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/radio_padding"
                android:layout_marginTop="@dimen/radio_marginTop_s"
                android:orientation="vertical">
                <RadioButton
                    android:id="@+id/question_2a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/question_2a"/>
                <RadioButton
                    android:id="@+id/question_2b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/question_2b"/>
                <RadioButton
                    android:id="@+id/question_2c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/question_2c"/>
                <RadioButton
                    android:id="@+id/question_2d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/question_2d"/>
            </RadioGroup>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_view3"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="@dimen/card_marginHorizontal"
            android:layout_marginBottom="@dimen/card_marginBottom"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="@dimen/card_cornerRadius"
            app:cardElevation="@dimen/card_elevation">

            <TextView
                android:id="@+id/question_text3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/text_paddingTop"
                android:paddingLeft="@dimen/text_paddingLeft"
                android:textSize="@dimen/text_size"
                android:textColor="@color/question_text_color"
                android:textStyle="bold"
                android:text="@string/question3"/>
            <RadioGroup
                android:id="@+id/question_3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/radio_padding"
                android:layout_marginTop="@dimen/radio_marginTop_s"
                android:orientation="vertical">
                <RadioButton
                    android:id="@+id/question_3a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/question_3a"/>
                <RadioButton
                    android:id="@+id/question_3b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/question_3b"/>
                <RadioButton
                    android:id="@+id/question_3c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/question_3c"/>
                <RadioButton
                    android:id="@+id/question_3d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/question_3d"/>
            </RadioGroup>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_view4"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="@dimen/card_marginHorizontal"
            android:layout_marginBottom="@dimen/card_marginBottom"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="@dimen/card_cornerRadius"
            app:cardElevation="@dimen/card_elevation">

            <TextView
                android:id="@+id/question_text4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/text_paddingTop"
                android:paddingLeft="@dimen/text_paddingLeft"
                android:textSize="@dimen/text_size"
                android:textColor="@color/question_text_color"
                android:textStyle="bold"
                android:text="@string/question4"/>
            <RadioGroup
                android:id="@+id/question_4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/radio_padding"
                android:layout_marginTop="@dimen/radio_marginTop_s"
                android:orientation="vertical">
                <RadioButton
                    android:id="@+id/question_4a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/question_4a"/>
                <RadioButton
                    android:id="@+id/question_4b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/question_4b"/>
                <RadioButton
                    android:id="@+id/question_4c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/question_4c"/>
                <RadioButton
                    android:id="@+id/question_4d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/question_4d"/>
            </RadioGroup>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_view5"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="@dimen/card_marginHorizontal"
            android:layout_marginBottom="@dimen/card_marginBottom"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="@dimen/card_cornerRadius"
            app:cardElevation="@dimen/card_elevation">

            <TextView
                android:id="@+id/question_text5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/text_paddingTop"
                android:paddingLeft="@dimen/text_paddingLeft"
                android:textSize="@dimen/text_size"
                android:textColor="@color/question_text_color"
                android:textStyle="bold"
                android:text="@string/question5"/>
            <RadioGroup
                android:id="@+id/question_5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/radio_padding"
                android:layout_marginTop="@dimen/radio_marginTop_s"
                android:orientation="vertical">
                <RadioButton
                    android:id="@+id/question_5a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/question_5a"/>
                <RadioButton
                    android:id="@+id/question_5b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/question_5b"/>
                <RadioButton
                    android:id="@+id/question_5c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/question_5c"/>
                <RadioButton
                    android:id="@+id/question_5d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/question_5d"/>
            </RadioGroup>

        </android.support.v7.widget.CardView>

        <!--Edit text questions-->

        <android.support.v7.widget.CardView
            android:id="@+id/card_view6"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="@dimen/card_marginHorizontal"
            android:layout_marginBottom="@dimen/card_marginBottom"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="@dimen/card_cornerRadius"
            app:cardElevation="@dimen/card_elevation">

            <TextView
                android:id="@+id/question_text6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/text_paddingTop"
                android:paddingLeft="@dimen/text_paddingLeft"
                android:textSize="@dimen/text_size"
                android:textColor="@color/question_text_color"
                android:textStyle="bold"
                android:text="@string/question6" />

            <EditText
                android:id="@+id/question_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/edit_marginTop"
                android:layout_marginLeft="@dimen/edit_marginLeft"
                android:layout_marginBottom="@dimen/card_marginBottom"
                android:textColor="@color/question_text_color"
                android:hint="@string/answer_hint"
                android:inputType="textCapWords" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_view7"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="@dimen/card_marginHorizontal"
            android:layout_marginBottom="@dimen/card_marginBottom"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="@dimen/card_cornerRadius"
            app:cardElevation="@dimen/card_elevation">

            <TextView
                android:id="@+id/question_text7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/text_paddingTop"
                android:paddingLeft="@dimen/text_paddingLeft"
                android:textSize="@dimen/text_size"
                android:textColor="@color/question_text_color"
                android:textStyle="bold"
                android:text="@string/question7" />

            <EditText
                android:id="@+id/question_7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/edit_marginTop"
                android:layout_marginLeft="@dimen/edit_marginLeft"
                android:layout_marginBottom="@dimen/edit_marginBottom"
                android:textColor="@color/question_text_color"
                android:hint="@string/answer_hint"
                android:inputType="textCapWords" />

        </android.support.v7.widget.CardView>


        <!--checkboxes questions-->

        <android.support.v7.widget.CardView
            android:id="@+id/card_view8"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="@dimen/card_marginHorizontal"
            android:layout_marginBottom="@dimen/card_marginBottom"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="@dimen/card_cornerRadius"
            app:cardElevation="@dimen/card_elevation">

            <TextView
                android:id="@+id/info_text8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/text_paddingTop"
                android:paddingLeft="@dimen/text_paddingLeft"
                android:layout_marginBottom="@dimen/text_checkboxMargin"
                android:textSize="@dimen/text_size"
                android:textColor="@color/question_text_color"
                android:textStyle="bold"
                android:text="@string/question8"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/question_8a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question_8a"
                android:textSize="15sp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="5dp" />

            <CheckBox
                android:id="@+id/question_8b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question_8b"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp" />

            <CheckBox
                android:id="@+id/question_8c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question_8c"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp" />

        </LinearLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_view9"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="@dimen/card_marginHorizontal"
            android:layout_marginBottom="@dimen/card_marginBottom"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="@dimen/card_cornerRadius"
            app:cardElevation="@dimen/card_elevation">

            <TextView
                android:id="@+id/question_text9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/text_paddingTop"
                android:paddingLeft="@dimen/text_paddingLeft"
                android:layout_marginBottom="@dimen/text_checkboxMargin"
                android:textSize="@dimen/text_size"
                android:textColor="@color/question_text_color"
                android:textStyle="bold"
                android:text="@string/question9"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/question_9a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/question_9a"
                    android:textSize="15sp"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="5dp" />

                <CheckBox
                    android:id="@+id/question_9b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/question_9b"
                    android:textSize="15sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp" />

                <CheckBox
                    android:id="@+id/question_9c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/question_9c"
                    android:textSize="15sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp" />

            </LinearLayout>


        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/mark_quiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="@dimen/button_marginBottom"
            android:text="@string/mark_quiz"
            android:textAllCaps="true" />

    </LinearLayout>



</ScrollView>
